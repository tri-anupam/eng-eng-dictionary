<script>

    let inputData  = document.getElementById("inputData")
    let btn = document.getElementById("btn")
    let defValue = document.querySelector(".def-value")
    let defAudio = document.querySelector(".def-audio")
    let url = "https://api.dictionaryapi.dev/api/v2/entries/en/"

    //get input data value
    btn.addEventListener('click',()=>{
        let typedData = inputData.value;
        fetch(url+typedData)
        .then((response) => response.json())
        .then((data) =>{
            console.log(data[0].meanings[0].definitions[0].definition);

        defValue.innerHTML = `<h3>{data[0].meanings[0].definitions[0].definition}</h3>`
        defAudio.innerHTML = ` <audio controls>
                <source src="${data[0].phonetics[0].audio}" type="audio/mpeg">
                </audio> `
        });
    })

</script>